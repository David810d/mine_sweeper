<%= stylesheet_link_tag "board/board" %>

<%= form_with(model: Board, class: "board-form") do |form| %>
  <% if @errors&.any? %>
    <div style="color: red">
      <h2><%= pluralize(@errors.count, "error") %> prohibited this board from being saved:</h2>

      <ul>
        <% @errors.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-control">
    <div class="form-group">
      <%= form.label "name", class: "label" %>
      <%= form.text_field :name, class: "input" %>
    </div>
    <div class="form-group">
      <%= form.label "Height", class: "label" %>
      <%= form.number_field :height, class: "input" %>
    </div>
    <div class="form-group">
      <%= form.label "Width", class: "label" %>
      <%= form.number_field :width, class: "input" %>
    </div>
    <div class="form-group">
      <%= form.label "Mine count", class: "label" %>
      <%= form.number_field :mine_count, class: "input" %>
    </div>

    <%= form.submit "Create", class: "submit" %>
  </div>
<% end %>
